<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.AddProducrWindow"
        Title="AddProducrWindow">
    <Grid ShowGridLines="True" RowDefinitions=".1* .2* .1*" ColumnDefinitions=".1* .2* .1*">
        <TextBlock Grid.Column="1" HorizontalAlignment="Center">Добавление продукта</TextBlock>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBox Margin="1" Watermark="Введите название" Name="prodName"/>
            <TextBox Margin="1" Watermark="Введите цену" Name="prodPrice"/>
            <TextBox Margin="1" Watermark="Введите производителя" Name="prodManufact"/>
            <TextBox Margin="1" Watermark="Введите производителя" Name="prodCount"/>
            <TextBox Margin="1" Watermark="Введите описание" Height="60" Name="prodDesc"/>
            
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Content="Добавить" Background="Transparent" Click="add"></Button>
        <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" Content="Картинка" Background="Transparent" Click="AddImageButton_Click"></Button>
    </Grid>
</Window>
